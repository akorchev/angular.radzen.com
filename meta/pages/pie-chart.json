{
  "access": [],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "style": {
            "display": "inline",
            "float": "none"
          },
          "text": "PieChart",
          "type": "heading"
        },
        {
          "icon": "",
          "name": "link0",
          "path": "https://github.com/akorchev/angular.radzen.com/blob/master/meta/pages/pie-chart.json",
          "text": "[source code]",
          "type": "link"
        },
        {
          "name": "heading0",
          "size": "H4",
          "text": "This page demonstrates PieChart component.",
          "type": "heading"
        },
        {
          "components": [
            {
              "components": [
                {
                  "class": "col-md-6",
                  "components": [
                    {
                      "name": "heading2",
                      "size": "H3",
                      "text": "PieChart",
                      "type": "heading"
                    },
                    {
                      "categoryProperty": "CustomerID",
                      "chartType": "Pie",
                      "data": "${getNorthwindOrdersResult}",
                      "events": {
                        "select": [
                          {
                            "code": "${events.unshift('Select: ' + JSON.stringify(event))}",
                            "type": "execute"
                          }
                        ]
                      },
                      "legend": true,
                      "name": "pie0",
                      "type": "pie",
                      "valueProperty": "Freight"
                    }
                  ],
                  "name": "col0",
                  "type": "col"
                },
                {
                  "class": "col-md-6",
                  "components": [
                    {
                      "name": "heading1",
                      "size": "H3",
                      "text": "Events",
                      "type": "heading"
                    },
                    {
                      "components": [
                        {
                          "content": "<div style=\"overflow:auto;height:100%\">\n  <div *ngFor=\"let event of events\">\n      {{ event }}\n  </div>\n</div>\n",
                          "name": "html0",
                          "type": "html"
                        }
                      ],
                      "name": "card1",
                      "style": {
                        "height": "500px"
                      },
                      "type": "card",
                      "visible": true
                    }
                  ],
                  "name": "col1",
                  "type": "col"
                }
              ],
              "name": "row0",
              "type": "row"
            }
          ],
          "name": "card0",
          "style": {
            "height": "600px"
          },
          "type": "card",
          "visible": true
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "events",
        "type": "set",
        "value": "[]"
      },
      {
        "name": "Northwind.getNorthwindOrders",
        "parameters": [
          {
            "name": "$expand",
            "value": "Customer,Employee"
          },
          {
            "name": "$top",
            "value": "5"
          },
          {
            "name": "$orderby",
            "value": "Freight"
          }
        ],
        "then": [
          {
            "name": "getNorthwindOrdersResult",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "PieChart"
}