{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "style": {
            "display": "inline",
            "float": "none"
          },
          "text": "DataGrid",
          "type": "heading"
        },
        {
          "icon": "",
          "name": "link0",
          "path": "https://github.com/akorchev/angular.radzen.com/blob/master/meta/pages/data-grid.json",
          "text": "[source code]",
          "type": "link"
        },
        {
          "name": "heading0",
          "size": "H4",
          "text": "This page demonstrates DataGrid component.",
          "type": "heading"
        },
        {
          "components": [
            {
              "allowFiltering": true,
              "allowPaging": true,
              "allowSorting": true,
              "columns": [
                {
                  "format": "int32",
                  "property": "EmployeeID",
                  "title": "Employee ID",
                  "type": "integer",
                  "width": "100px"
                },
                {
                  "filterable": false,
                  "property": "Photo",
                  "sortable": false,
                  "template": [
                    {
                      "name": "image0",
                      "path": "${data.Photo}",
                      "style": {},
                      "type": "image"
                    }
                  ],
                  "title": "Photo",
                  "type": "string",
                  "width": "120px"
                },
                {
                  "property": "LastName",
                  "title": "Last Name",
                  "type": "string"
                },
                {
                  "property": "FirstName",
                  "title": "First Name",
                  "type": "string"
                },
                {
                  "property": "Title",
                  "title": "Title",
                  "type": "string"
                },
                {
                  "property": "TitleOfCourtesy",
                  "title": "Title Of Courtesy",
                  "type": "string"
                },
                {
                  "format": "date-time",
                  "property": "BirthDate",
                  "template": "${data.BirthDate | utcDate}",
                  "title": "Birth Date",
                  "type": "string"
                },
                {
                  "format": "date-time",
                  "property": "HireDate",
                  "template": "${data.HireDate | utcDate}",
                  "title": "Hire Date",
                  "type": "string"
                },
                {
                  "property": "Address",
                  "title": "Address",
                  "type": "string"
                },
                {
                  "property": "City",
                  "title": "City",
                  "type": "string"
                },
                {
                  "property": "Region",
                  "title": "Region",
                  "type": "string"
                },
                {
                  "property": "PostalCode",
                  "title": "Postal Code",
                  "type": "string"
                },
                {
                  "property": "Country",
                  "title": "Country",
                  "type": "string"
                },
                {
                  "property": "HomePhone",
                  "title": "Home Phone",
                  "type": "string"
                },
                {
                  "property": "Extension",
                  "title": "Extension",
                  "type": "string"
                },
                {
                  "property": "Notes",
                  "title": "Notes",
                  "type": "string"
                }
              ],
              "count": "${getEmployeesCount}",
              "data": "${getEmployeesResult}",
              "events": {
                "loadData": [
                  {
                    "name": "Northwind.getEmployees",
                    "parameters": [
                      {
                        "name": "$top",
                        "value": "event.top"
                      },
                      {
                        "name": "$skip",
                        "value": "event.skip"
                      },
                      {
                        "name": "$count",
                        "value": "event.top != null && event.skip != null"
                      },
                      {
                        "name": "$filter",
                        "value": "${event.filter}"
                      },
                      {
                        "name": "$orderby",
                        "value": "${event.orderby}"
                      }
                    ],
                    "then": [
                      {
                        "name": "getEmployeesResult",
                        "type": "set",
                        "value": "${result.value}"
                      },
                      {
                        "name": "getEmployeesCount",
                        "type": "set",
                        "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                      }
                    ],
                    "type": "invoke"
                  }
                ]
              },
              "name": "grid0",
              "pageSize": 4,
              "type": "grid",
              "value": "",
              "confirmDeleteText": "Are you sure you want to delete this record?",
              "confirmDeleteTitle": "Confirmation",
              "confirmDeleteOkText": "Ok",
              "confirmDeleteCancelText": "Cancel",
              "emptyText": "No records to display.",
              "addText": "Add"
            }
          ],
          "name": "card0",
          "style": {
            "height": "100%"
          },
          "type": "card",
          "visible": true
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "events",
        "type": "set",
        "value": "[]"
      },
      {
        "code": "this.grid0.load();",
        "error": [],
        "type": "execute"
      }
    ]
  },
  "layout": "Main",
  "name": "DataGrid"
}