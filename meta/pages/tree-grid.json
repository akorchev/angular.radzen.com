{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "style": {
            "display": "inline",
            "float": "none"
          },
          "text": "TreeGrid",
          "type": "heading"
        },
        {
          "icon": "",
          "name": "link0",
          "path": "https://github.com/akorchev/angular.radzen.com/blob/master/meta/pages/tree-grid.json",
          "text": "[source code]",
          "type": "link"
        },
        {
          "name": "heading0",
          "size": "H4",
          "text": "This page demonstrates TreeGrid component.",
          "type": "heading"
        },
        {
          "components": [
            {
              "components": [
                {
                  "class": "col-md-6",
                  "components": [
                    {
                      "name": "heading2",
                      "size": "H3",
                      "text": "Employees",
                      "type": "heading"
                    },
                    {
                      "columns": [
                        {
                          "property": "EmployeeID",
                          "title": "Employee ID"
                        },
                        {
                          "property": "LastName",
                          "title": "Last Name"
                        },
                        {
                          "property": "FirstName",
                          "title": "First Name"
                        }
                      ],
                      "data": "${employees}",
                      "events": {
                        "nodeExpand": [
                          {
                            "name": "Northwind.getEmployees",
                            "parameters": [
                              {
                                "name": "$filter",
                                "value": "EmployeeID eq ${event.data.ReportsTo}"
                              }
                            ],
                            "then": [
                              {
                                "code": "${event.children = result.value}",
                                "type": "execute"
                              }
                            ],
                            "type": "invoke"
                          }
                        ],
                        "nodeLoaded": [
                          {
                            "code": "${event.leaf = event.data.ReportsTo == null}",
                            "type": "execute"
                          }
                        ],
                        "nodeSelect": [
                          {
                            "code": "${events.push('TreeGrid NodeSelect: ' + JSON.stringify(event))}",
                            "type": "execute"
                          }
                        ]
                      },
                      "name": "treegrid0",
                      "type": "treegrid"
                    }
                  ],
                  "name": "col0",
                  "type": "col"
                },
                {
                  "class": "col-md-6",
                  "components": [
                    {
                      "name": "heading1",
                      "size": "H3",
                      "text": "Events",
                      "type": "heading"
                    },
                    {
                      "components": [
                        {
                          "content": "<div style=\"overflow:auto;height:100%\">\n  <div *ngFor=\"let event of events?.reverse()\">\n      {{ event }}\n  </div>\n</div>",
                          "name": "html0",
                          "type": "html"
                        }
                      ],
                      "name": "card1",
                      "style": {
                        "height": "500px"
                      },
                      "type": "card",
                      "visible": true
                    }
                  ],
                  "name": "col1",
                  "type": "col"
                }
              ],
              "name": "row0",
              "type": "row"
            }
          ],
          "name": "card0",
          "style": {
            "height": "100%"
          },
          "type": "card",
          "visible": true
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "events",
        "type": "set",
        "value": "[]"
      },
      {
        "name": "Northwind.getEmployees",
        "parameters": [],
        "then": [
          {
            "name": "employees",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "TreeGrid"
}