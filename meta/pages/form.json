{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "style": {
            "display": "inline",
            "float": "none"
          },
          "text": "Form",
          "type": "heading"
        },
        {
          "icon": "",
          "name": "link0",
          "path": "https://github.com/akorchev/angular.radzen.com/blob/master/meta/pages/form.json",
          "text": "[source code]",
          "type": "link"
        },
        {
          "name": "heading0",
          "size": "H4",
          "text": "This page demonstrates Form component.",
          "type": "heading"
        },
        {
          "components": [
            {
              "components": [
                {
                  "class": "col-md-6",
                  "components": [
                    {
                      "name": "heading2",
                      "size": "H3",
                      "style": {
                        "display": "inline"
                      },
                      "text": "Form with two columns",
                      "type": "heading"
                    },
                    {
                      "columns": "2",
                      "data": "${formData}",
                      "events": {
                        "loadData": [
                          {
                            "name": "Northwind.getNorthwindProducts",
                            "parameters": [
                              {
                                "name": "$top",
                                "value": "${event.top}"
                              },
                              {
                                "name": "$skip",
                                "value": "${event.skip}"
                              },
                              {
                                "name": "$filter",
                                "value": "${event.filter}"
                              },
                              {
                                "name": "$orderby",
                                "value": "${event.orderby}"
                              },
                              {
                                "name": "$count",
                                "value": "true"
                              }
                            ],
                            "then": [
                              {
                                "name": "getProductsResult",
                                "type": "set",
                                "value": "${result.value}"
                              },
                              {
                                "name": "getProductsCount",
                                "type": "set",
                                "value": "result['@odata.count']"
                              }
                            ],
                            "type": "invoke"
                          }
                        ],
                        "submit": [
                          {
                            "code": "${events.push('Form Submit: ' + JSON.stringify(event))}",
                            "type": "execute"
                          }
                        ]
                      },
                      "fields": [
                        {
                          "property": "stringProperty",
                          "requiredText": "is required",
                          "title": "String",
                          "type": "string"
                        },
                        {
                          "property": "textProperty",
                          "requiredText": "is required",
                          "title": "Text",
                          "type": "text"
                        },
                        {
                          "allowClear": true,
                          "allowFiltering": true,
                          "data": "${getCategoriesResult}",
                          "placeholder": "Select category",
                          "property": "lookupProperty",
                          "requiredText": "is required",
                          "template": "",
                          "textProperty": "CategoryName",
                          "title": "Lookup",
                          "type": "lookup",
                          "valueProperty": "CategoryID"
                        },
                        {
                          "count": "${getProductsCount}",
                          "data": "${getProductsResult}",
                          "pageSize": "${getProductsPageSize}",
                          "placeholder": "Select product",
                          "property": "lookupPopupProperty",
                          "requiredText": "is required",
                          "textProperty": "ProductName",
                          "type": "lookuppopup",
                          "value": "",
                          "valueProperty": "ProductID"
                        },
                        {
                          "property": "fileProperty",
                          "title": "File",
                          "type": "file",
                          "requiredText": "is required"
                        },
                        {
                          "property": "boolProperty",
                          "title": "Boolean",
                          "type": "boolean",
                          "requiredText": "is required"
                        },
                        {
                          "property": "numberProperty",
                          "title": "Number",
                          "type": "number",
                          "requiredText": "is required",
                          "minText": "cannot be less than",
                          "maxText": "cannot be more than"
                        },
                        {
                          "property": "integerProperty",
                          "title": "Integer",
                          "type": "integer",
                          "requiredText": "is required",
                          "minText": "cannot be less than",
                          "maxText": "cannot be more than"
                        },
                        {
                          "property": "dateProperty",
                          "title": "Date",
                          "type": "date",
                          "requiredText": "is required"
                        },
                        {
                          "property": "ratingProperty",
                          "title": "Rating",
                          "type": "rating",
                          "requiredText": "is required"
                        },
                        {
                          "property": "passwordProperty",
                          "title": "Password",
                          "type": "password",
                          "requiredText": "is required"
                        },
                        {
                          "options": [
                            {
                              "text": "Item 1",
                              "value": "1"
                            },
                            {
                              "text": "Item 2",
                              "value": "2"
                            },
                            {
                              "text": "Item 3",
                              "value": "3"
                            }
                          ],
                          "property": "selectBarProperty",
                          "title": "SelectBar",
                          "type": "selectbar",
                          "requiredText": "is required"
                        }
                      ],
                      "name": "form0",
                      "type": "form"
                    }
                  ],
                  "name": "col0",
                  "type": "col"
                },
                {
                  "class": "col-md-6",
                  "components": [
                    {
                      "name": "heading1",
                      "size": "H3",
                      "text": "Events",
                      "type": "heading"
                    },
                    {
                      "components": [
                        {
                          "content": "<div style=\"overflow:auto;height:100%\">\n  <div *ngFor=\"let event of events?.reverse()\">\n      {{ event }}\n  </div>\n</div>\n",
                          "name": "html0",
                          "type": "html"
                        }
                      ],
                      "name": "card1",
                      "style": {
                        "height": "500px"
                      },
                      "type": "card",
                      "visible": true
                    }
                  ],
                  "name": "col1",
                  "type": "col"
                }
              ],
              "name": "row0",
              "type": "row"
            }
          ],
          "name": "card0",
          "style": {
            "height": "100%"
          },
          "type": "card",
          "visible": true
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "events",
        "type": "set",
        "value": "[]"
      },
      {
        "name": "formData",
        "type": "set",
        "value": "{}"
      },
      {
        "name": "Northwind.getCategories",
        "parameters": [],
        "then": [
          {
            "name": "getCategoriesResult",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "Northwind.getNorthwindProducts",
        "parameters": [
          {
            "name": "$top",
            "value": "${getProductsPageSize}"
          },
          {
            "name": "$skip",
            "value": "0"
          },
          {
            "name": "$count",
            "value": "true"
          }
        ],
        "then": [
          {
            "name": "getProductsResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getProductsCount",
            "type": "set",
            "value": "result['@odata.count']"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "getProductsPageSize",
        "type": "set",
        "value": "10"
      }
    ]
  },
  "layout": "Main",
  "name": "Form"
}