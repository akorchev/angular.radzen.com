{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "style": {
            "display": "inline",
            "float": "none"
          },
          "text": "Tree",
          "type": "heading"
        },
        {
          "icon": "",
          "name": "link0",
          "path": "https://github.com/akorchev/angular.radzen.com/blob/master/meta/pages/tree.json",
          "text": "[source code]",
          "type": "link"
        },
        {
          "name": "heading0",
          "size": "H4",
          "text": "This page demonstrates Tree component.",
          "type": "heading"
        },
        {
          "components": [
            {
              "components": [
                {
                  "class": "col-md-6",
                  "components": [
                    {
                      "name": "heading2",
                      "size": "H3",
                      "text": "Self-referencing Employees",
                      "type": "heading"
                    },
                    {
                      "data": "${employees}",
                      "events": {
                        "nodeExpand": [
                          {
                            "name": "Northwind.getEmployees",
                            "parameters": [
                              {
                                "name": "$filter",
                                "value": "ReportsTo eq ${event.data.EmployeeID}"
                              }
                            ],
                            "then": [
                              {
                                "code": "${event.children = result.value}",
                                "type": "execute"
                              }
                            ],
                            "type": "invoke"
                          }
                        ],
                        "nodeLoaded": [
                          {
                            "code": "${event.leaf = !event.children}",
                            "type": "execute"
                          }
                        ],
                        "nodeSelect": [
                          {
                            "code": "${events.push('Self-referenced Tree SelectedNode: ' + JSON.stringify(event.data))}",
                            "type": "execute"
                          }
                        ]
                      },
                      "levels": [
                        {
                          "schema": "Sample.Models.Northwind.Employee",
                          "template": "",
                          "textProperty": "LastName"
                        }
                      ],
                      "name": "tree0",
                      "type": "tree",
                      "visible": "${employees}"
                    },
                    {
                      "name": "heading3",
                      "size": "H3",
                      "text": "Customers -> Orders -> Order Details",
                      "type": "heading"
                    },
                    {
                      "data": "${customers}",
                      "events": {
                        "nodeExpand": [
                          {
                            "condition": "${event.level == 0}",
                            "error": [
                              {}
                            ],
                            "name": "Northwind.getNorthwindOrders",
                            "parameters": [
                              {
                                "name": "$filter",
                                "value": "CustomerID eq '${event.data.CustomerID}'"
                              }
                            ],
                            "then": [
                              {
                                "code": "${event.children = result.value}",
                                "type": "execute"
                              }
                            ],
                            "type": "invoke"
                          },
                          {
                            "condition": "${event.level == 1}",
                            "name": "Northwind.getNorthwindOrderDetails",
                            "parameters": [
                              {
                                "name": "$filter",
                                "value": "OrderID eq ${event.data.OrderID}"
                              }
                            ],
                            "then": [
                              {
                                "code": "${event.children = result.value}",
                                "type": "execute"
                              }
                            ],
                            "type": "invoke"
                          }
                        ],
                        "nodeLoaded": [
                          {
                            "code": "${event.leaf = !event.children}",
                            "type": "execute"
                          }
                        ],
                        "nodeSelect": [
                          {
                            "code": "${events.push('Tree SelectedNode: ' + JSON.stringify(event.data))}",
                            "type": "execute"
                          }
                        ]
                      },
                      "levels": [
                        {
                          "schema": "Sample.Models.Northwind.Customer",
                          "template": "",
                          "textProperty": "CompanyName"
                        },
                        {
                          "schema": "Sample.Models.Northwind.NorthwindOrder",
                          "textProperty": "OrderID"
                        },
                        {
                          "leaf": true,
                          "schema": "Sample.Models.Northwind.NorthwindProduct",
                          "template": "",
                          "textProperty": "ProductID"
                        }
                      ],
                      "name": "tree1",
                      "style": {
                        "height": "400px"
                      },
                      "type": "tree",
                      "visible": "${customers}"
                    }
                  ],
                  "name": "col0",
                  "type": "col"
                },
                {
                  "class": "col-md-6",
                  "components": [
                    {
                      "name": "heading1",
                      "size": "H3",
                      "text": "Events",
                      "type": "heading"
                    },
                    {
                      "components": [
                        {
                          "content": "<div style=\"overflow:auto;height:100%\">\n  <div *ngFor=\"let event of events?.reverse()\">\n      {{ event }}\n  </div>\n</div>",
                          "name": "html0",
                          "type": "html"
                        }
                      ],
                      "name": "card1",
                      "style": {
                        "height": "500px"
                      },
                      "type": "card",
                      "visible": true
                    }
                  ],
                  "name": "col1",
                  "type": "col"
                }
              ],
              "name": "row0",
              "type": "row"
            }
          ],
          "name": "card0",
          "style": {
            "height": "100%"
          },
          "type": "card",
          "visible": true
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "events",
        "type": "set",
        "value": "[]"
      },
      {
        "name": "Northwind.getEmployees",
        "parameters": [
          {
            "name": "$filter",
            "value": "ReportsTo eq null"
          }
        ],
        "then": [
          {
            "name": "employees",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "Northwind.getCustomers",
        "parameters": [],
        "then": [
          {
            "name": "customers",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Tree"
}